	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Launch current script",
			"skipFiles": [
				"<node_internals>/**"
			],
			"program": "${file}"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Mocha Tests",
			"program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
			// "program": "${workspaceFolder}\\test\\js-url-params.js",
			"args": [
				"${workspaceFolder}/test"
			],
			"internalConsoleOptions": "openOnSessionStart",
			"skipFiles": [
				"<node_internals>/**"
			]
		}
	]
}